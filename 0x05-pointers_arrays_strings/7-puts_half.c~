#include "main.h"

/**
* puts_half - function code
*@str: string
* Return: 0
*/
int main(void)
{
    char *str;

    str = "0123456789";
    puts_half(str);
    return (0);
}

void puts_half(char *str)
{
int g, i = strlen(str);
if(i % 2 != 0)
{
--i;
}
for (g = i / 2; g <= i; g++)
{
putchar(str[g]);
}
putchar('\n');
}
