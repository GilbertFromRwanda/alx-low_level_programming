#include "main.h"

/**
* print_diagonal - function code
*@n: integer value
* Return: 0
*/
int main(void)
{
    print_diagonal(0);
    print_diagonal(2);
    print_diagonal(10);
    print_diagonal(-4);
    return (0);
}

void  print_diagonal(int n)
{
int i = 1, s = 0;
if (n > 0)
{
while (i <= n)
{
while (s <= i)
{
putchar(' ');
s++;
}
putchar('\\');
putchar('\n');
i++;
s = 0;
}
}
else
{
putchar('\n');
}
}
